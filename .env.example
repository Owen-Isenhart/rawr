# Database Configuration
DATABASE_URL=postgresql://postgres:password@db:5432/hacker_db
# For development: sqlite:///./test.db

# Security
SECRET_KEY=your-secret-key-here-change-in-production-minimum-32-chars!
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Ollama Configuration (for AI model inference)
OLLAMA_HOST=http://host.docker.internal:11434

# Database Debug (set to true to see SQL queries)
SQL_ECHO=false

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
